<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/some_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:text="다양한 감정"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/happy"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="기쁨"
            android:textColor="@color/darkbrown"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:onClick="ClickButton1"
            android:backgroundTint="#FFE7E7"> </Button>

        <Button
            android:id="@+id/angry"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="분노"
            android:textColor="@color/darkbrown"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:onClick="ClickButton2"
            android:backgroundTint="#EAE7FF"> </Button>

        <Button
            android:id="@+id/disgust"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="불쾌"
            android:textColor="@color/darkbrown"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:onClick="ClickButton3"
            android:backgroundTint="#E7FFEB"> </Button>

        <Button
            android:id="@+id/sad"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="슬픔"
            android:textColor="@color/darkbrown"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:onClick="ClickButton4"
            android:backgroundTint="#FFFDE7"> </Button>

        <Button
            android:id="@+id/fear"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="두려움"
            android:textColor="@color/darkbrown"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:onClick="ClickButton5"
            android:backgroundTint="#FFF4E7"> </Button>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>