<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/leftIMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/left_arrow_image" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <ImageView
                android:id="@+id/circle_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_image" />

            <ImageView
                android:id="@+id/level"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="48dp"
                android:src="@drawable/level5" />
        </FrameLayout>

        <TextView
            android:id="@+id/scoreTXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="OO개를 맞췄어요!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/explainTXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아쉽네요!"
            android:textAlignment="center"
            android:textColor="#656F77"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_gravity="center" >

            <Button
                android:id="@+id/nextBTN"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="계속하기"
                android:textSize="14sp"
                android:backgroundTint="@color/darkbrown"
                android:textStyle="bold"
                android:onClick="NewButton"> </Button>

            <Button
                android:id="@+id/endBTN"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="나가기"
                android:textSize="14sp"
                android:layout_marginLeft="24dp"
                android:backgroundTint="@color/darkbrown"
                android:textStyle="bold"
                android:onClick="EndButton"> </Button>

        </LinearLayout>

        <Button
            android:id="@+id/checkBT"
            android:layout_width="204dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="checkAnswer"
            android:text="오답노트"
            android:textSize="14sp"
            android:backgroundTint="@color/darkbrown"
            android:textStyle="bold"></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>